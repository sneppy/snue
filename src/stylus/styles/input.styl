/* 
	Form and input stylesheet
 */
// Text input
.input-text
	border: none

	background-color: light
	color: darkish

	font-family: fontSans, Arial, Helvetica, sans-serif

	transition: border .2s ease, color .2s ease, box-shadow .2s ease

	&:focus
		outline: none

		color: dark
	&:disabled
		color: lightish
	&.round
		border-radius: 10em

.input-text-light
	@extend .input-text

.input-text-dark
	@extend .input-text

	background-color: dark
	color: lightish

	&:focus
		color: light
	&:disabled
		color: darkish

/* Switch input */
.input-switch
	appearance: none
	-webkit-appearance: none
	-moz-appearance: none
	-ms-progress-appearance: none
	
	position: relative

	padding: 0.8em 1.6em
	border-radius: 0.8em

	background-color: lightgray

	cursor: pointer

	transition: background-color 0.2s ease

	&:checked
		background-color: success

		&::after
			left: 1.9em
	&::after
		content: ""
		width: 1em
		height: 1em
		display: block
		position: absolute
		left: 0.3em
		top: 0.3em

		border-radius: 50%

		background-color: light

		transition: left 0.2s ease

.input-switch-light
	@extends .input-switch

.input-switch-dark
	@extends .input-switch

	&::after
		background-color: dark